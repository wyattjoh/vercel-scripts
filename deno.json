{
  "name": "@wyattjoh/vercel-scripts",
  "version": "0.1.19",
  "exports": {
    ".": "./src/mod.ts"
  },
  "bin": {
    "vss": "./src/main.ts"
  },
  "$schema": "https://github.com/denoland/deno/blob/main/cli/schemas/config-file.v1.json",
  "license": "MIT",
  "publish": {
    "include": ["src/**/*.ts", "src/**/*.sh", "README.md"]
  },
  "tasks": {
    "build": "deno compile --allow-all --include=src/scripts --include=src/runtime --output=vss src/main.ts",
    "dev": "deno run --allow-all --watch src/main.ts",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": "deno check && deno fmt --check && deno lint",
    "hooks:pre-push": "deno publish --dry-run --allow-dirty"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.8",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@wyattjoh/jsr-update-checker": "jsr:@wyattjoh/jsr-update-checker@^0.1.0",
    "yoctocolors": "npm:yoctocolors@^2.1.1",
    "zod": "npm:zod@^3.24.1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
